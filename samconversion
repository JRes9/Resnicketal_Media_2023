#!/bin/sh
#SBATCH --mem=50G
#SBATCH --cores-per-socket=8
#SBATCH --time=48:0:0
echo "this is a linux command with 50GB memory and 2 day time limit"
ls -lt
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/AirDiff_1.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/AirDiff_1.sam
