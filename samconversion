samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/AirUndiff_2.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/AirUndiff_2.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/AirUndiff_3.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/AirUndiff_3.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusDiff_1.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusDiff_1.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusDiff_2.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusDiff_2.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusDiff_3.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusDiff_3.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusUndiff_1.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusUndiff_1.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusUndiff_2.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusUndiff_2.sam
samtools sort -@ 8 -o /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusUndiff_3.bam /mnt/VolA/data/jresnic4/Media/hisat2outputensembl/PlusUndiff_3.sam
